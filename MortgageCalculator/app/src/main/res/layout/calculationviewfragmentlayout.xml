<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.adityaparmar.mortgagecalculator.MainActivity">




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Property Type :"
            android:layout_width="wrap_content"
            android:layout_height="30dp"

            android:id="@+id/textView2"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="16sp" />

        <Spinner
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:id="@+id/spinnerpropertytype" />

    </LinearLayout>



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/street"

            android:layout_marginTop="11dp"
            android:hint="Street" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/city"
            android:hint="City"
           />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                    android:text="State :"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"

                    android:id="@+id/textView3"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="16sp" />

                <Spinner
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"

                    android:id="@+id/state" />

        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"

            android:id="@+id/zip"
            android:hint="Zip Code" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/propertyprice"
            android:hint="Property Price" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"

            android:id="@+id/downpayment"
            android:hint="DownPayment"

            android:ems="10" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"

            android:id="@+id/rate"
            android:hint="Annual Rate of Interest" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"

            android:id="@+id/period"
            android:hint="Number of years" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:text="Calculate"
                android:layout_width="115dp"
                android:layout_height="wrap_content"

                android:id="@+id/bcalculate"
                />

            <Button
                android:text="Save"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:id="@+id/bsave"
                />

            <Button
                android:text="New"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:id="@+id/bclear"
                />

        </LinearLayout>


        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginRight="51dp"
            android:layout_marginEnd="51dp"
            android:layout_marginTop="14dp"
            android:id="@+id/text_monthly_payment" />

    </LinearLayout>


</RelativeLayout>